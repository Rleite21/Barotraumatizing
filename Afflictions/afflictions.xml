<?xml version="1.0" encoding="utf-8"?>
<Afflictions>
  <Override>
    <Affliction name="Hunger" identifier="hunger" description="The stomach's growling..." limbspecific="false" indicatorlimb="" maxstrength="100" showiconthreshold="0" IconColors="255,255,255">
      <Effect minstrength="0" maxstrength="45" strengthchange="0" minvitalitydecrease="0" maxvitalitydecrease="0">
      </Effect>
      <Effect minstrength="45" maxstrength="75" strengthchange="0" minvitalitydecrease="0" maxvitalitydecrease="0">
        <StatusEffect target="Character" SpeedMultiplier="0.8" setvalue="true" />
      </Effect>
      <Effect minstrength="75" maxstrength="95" strengthchange="0" minvitalitydecrease="0" maxvitalitydecrease="25" minchromaticaberration="0.0" maxchromaticaberration="5.0">
        <StatusEffect target="Character" SpeedMultiplier="0.6" setvalue="true" />
      </Effect>
      <Effect minstrength="95" maxstrength="100" strengthchange="0" minvitalitydecrease="50" maxvitalitydecrease="70" minchromaticaberration="10.0" maxchromaticaberration="10.0" minscreenblur="0.0" maxscreenblur="10.0">
        <StatusEffect target="Character" SpeedMultiplier="0.4" setvalue="true" />
      </Effect>
      <icon texture="%ModDir%/Afflictions/Textures/hunger.png" sourcerect="0,0,480,480" origin="0,0"/>
    </Affliction>
  </Override>

    <Affliction name="Food poisoning" identifier="foodpoisoning" description="Must've eaten something pretty stale." limbspecific="false" indicatorlimb="Torso" maxstrength="100" iconcolors="205,227,125,255;151,186,76,255;81,128,41,255">
      <Effect minstrength="0" maxstrength="50" strengthchange="-0.2" minvitalitydecrease="0" maxvitalitydecrease="15">
        <StatusEffect target="Character" SpeedMultiplier="0.8" setvalue="true">
          <Affliction identifier="nausea" amount="1.1" />
          <Affliction identifier="hunger" strength="0.1" />
        </StatusEffect>
      </Effect>
      <Effect minstrength="50" maxstrength="100" minvitalitydecrease="15" maxvitalitydecrease="35" minchromaticaberration="1.0" maxchromaticaberration="5.0">
        <StatusEffect target="Character" SpeedMultiplier="0.6" setvalue="true">
          <Affliction identifier="nausea" amount="1.3" />
          <Affliction identifier="hunger" strength="0.2" />
        </StatusEffect>
      </Effect>
      <icon texture="%ModDir%/Afflictions/Textures/hunger.png" sourcerect="0,0,200,200" color="10,193,114,255" origin="0,0" />
    </Affliction>

    <Override>
    <Affliction name="Nausea" identifier="nausea" description="The skin is clammy and the patient is vomiting periodically." type="nausea" causeofdeathdescription="Choked on vomit." selfcauseofdeathdescription="You have choked on your own vomit." limbspecific="false" maxstrength="100" treatmentthreshold="1000" karmachangeonapplied="-0.1" damageoverlayalpha="1">
      <Effect minstrength="0" maxstrength="100" strengthchange="-1.0">
        <StatusEffect target="Character" SpeedMultiplier="0.6" setvalue="true" />
      </Effect>
      <PeriodicEffect mininterval="12" maxinterval="16">
        <StatusEffect target="Character" SpeedMultiplier="0.0" setvalue="true" duration="1.7">
          <Affliction identifier="hunger" strength="0.025" />
        </StatusEffect>
        <StatusEffect target="Character" comparison="and">
          <Conditional ishuman="true" />
          <Conditional ismale="true" />
          <Sound file="Content/Sounds/HUMAN_chokeMale1.ogg" selectionmode="Random" />
          <Sound file="Content/Sounds/HUMAN_chokeMale2.ogg" />
          <Sound file="Content/Sounds/HUMAN_chokeMale3.ogg" />
        </StatusEffect>
        <StatusEffect target="Character" comparison="and">
          <Conditional ishuman="true" />
          <Conditional isfemale="true" />
          <Sound file="Content/Sounds/HUMAN_chokeFemale1.ogg" selectionmode="Random" />
          <Sound file="Content/Sounds/HUMAN_chokeFemale2.ogg" />
          <Sound file="Content/Sounds/HUMAN_chokeFemale3.ogg" />
        </StatusEffect>
        <StatusEffect target="Character">
          <Affliction identifier="stun" strength="0.1" />
          <Affliction identifier="organdamage" strength="0.5" />
        </StatusEffect>
        <StatusEffect target="Character" targetlimbs="Head" duration="1">
          <ParticleEmitter particle="vomitsplash" copyentityangle="true" anglemin="-10" anglemax="10" particlespersecond="50" velocitymin="50" velocitymax="200" scalemin="0.1" scalemax="0.2" />
          <Explosion range="0.0" structuredamage="0" itemdamage="0" force="0.0" severlimbsprobability="0.0" decal="vomitsplatter" decalsize="1.25" shockwave="false" underwaterbubble="false" />
          <Conditional HideFace="eq False" />
        </StatusEffect>
      </PeriodicEffect>
      <icon texture="Content/UI/CommandUIAtlas.png" sourcerect="896,896,128,128" origin="0,0" />
    </Affliction>
    </Override>
  
</Afflictions>